<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manualCheckInResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_bg"
    android:orientation="horizontal"
    tools:context=".view.fragments.ManualCheckInResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_bottom_sheet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvManualCheckInResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="Xác nhận điểm danh"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvCapturedFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Nhận dạng"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/margin_24"
            app:layout_constraintTop_toBottomOf="@id/tvManualCheckInResult"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCapturedFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="@id/tvCapturedFace"
            app:layout_constraintTop_toBottomOf="@id/tvCapturedFace"
            tools:listitem="@layout/item_capture_face_student"/>

        <TextView
            android:id="@+id/tvResultFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Hình ảnh đăng kí"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintTop_toBottomOf="@id/rvCapturedFace"
            app:layout_constraintLeft_toLeftOf="@id/tvCapturedFace"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvResultFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvResultFace"
            app:layout_constraintLeft_toLeftOf="@id/tvCapturedFace"
            tools:listitem="@layout/item_registered_face"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <TextView
            android:id="@+id/tvCheckInResultStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24"
            android:text="Điểm danh thành công"
            android:textColor="@color/green_kelly"
            android:textSize="@dimen/text_16"
            android:visibility="invisible"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/rvResultFace"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@drawable/bgr_button_confirm"
            android:text="Xác nhận"
            android:layout_marginHorizontal="@dimen/dimen_24"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tvCheckInResultStatus"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnCancel"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bgr_button_active"
            android:text="Hủy bỏ"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/dimen_24"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/btnConfirm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btnConfirm"
            app:layout_constraintBottom_toBottomOf="@id/btnConfirm" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>