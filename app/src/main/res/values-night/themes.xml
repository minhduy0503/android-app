<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitFace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowEnterTransition">@anim/slide_right</item>
        <item name="android:windowExitTransition">@anim/slide_left</item>

        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>