<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_16"
    android:layout_marginVertical="@dimen/margin_16"
    android:padding="@dimen/margin_4"
    android:background="@drawable/bgr_rounded_corner">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgStudents"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/roundedImageView"
        android:src="@drawable/pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCapturedFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Nhận dạng"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintTop_toBottomOf="@id/imgStudents"
        app:layout_constraintLeft_toLeftOf="@id/imgStudents"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCapturedFace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCapturedFace"
        app:layout_constraintLeft_toLeftOf="@id/imgStudents"
        tools:listitem="@layout/item_student_manual_check_in_result"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/tvResultFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Hình ảnh đăng kí"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintTop_toBottomOf="@id/rvCapturedFace"
        app:layout_constraintLeft_toLeftOf="@id/tvCapturedFace"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultFace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvResultFace"
        app:layout_constraintLeft_toLeftOf="@id/imgStudents"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_student_manual_check_in_result"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>