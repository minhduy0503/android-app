<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_16"
    android:layout_marginVertical="@dimen/margin_16"
    android:id="@+id/ctrRootView"
    android:background="@drawable/bgr_rounded_corner">

    <View
        android:id="@+id/imgStatusCheckInNow"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/avatarStudent"
        app:layout_constraintBottom_toBottomOf="@id/avatarStudent"
        android:background="@color/green_kelly"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarStudent"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_student"
        android:layout_marginVertical="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_8"
        android:scaleType="centerCrop"
        app:strokeWidth="@dimen/dimen_2"
        app:strokeColor="@color/white"
        app:shapeAppearance="@style/circleImageView"
        app:layout_constraintLeft_toRightOf="@id/imgStatusCheckInNow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1712378"
        android:textColor="@color/black"
        android:textSize="@dimen/text_20"
        android:layout_marginStart="@dimen/margin_12"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/avatarStudent"
        app:layout_constraintTop_toTopOf="@id/avatarStudent"
        app:layout_constraintBottom_toTopOf="@id/imgChecked"/>

    <TextView
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:textColor="@color/black"
        android:textSize="@dimen/text_20"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/tvStudentId"
        app:layout_constraintBottom_toBottomOf="@id/tvStudentId"
        app:layout_constraintLeft_toRightOf="@id/tvStudentId"/>

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Đặng Minh Duy"
        android:textColor="@color/black"
        android:textSize="@dimen/text_20"
        android:layout_marginEnd="@dimen/margin_14"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/tvStudentId"
        app:layout_constraintBottom_toBottomOf="@id/tvStudentId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/spacer" />

    <ImageView
        android:id="@+id/imgChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checked"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="@id/avatarStudent"
        app:layout_constraintLeft_toLeftOf="@id/tvStudentId"
        app:layout_constraintTop_toBottomOf="@id/tvStudentId" />

    <TextView
        android:id="@+id/tvCheckedSessionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_20"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintTop_toTopOf="@id/imgChecked"
        app:layout_constraintBottom_toBottomOf="@id/imgChecked"
        app:layout_constraintLeft_toRightOf="@id/imgChecked" />



    <ImageView
        android:id="@+id/imgCheckedByHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_by_hand"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="@id/tvCheckedSessionNumber"
        app:layout_constraintLeft_toRightOf="@id/imgChecked"
        app:layout_constraintRight_toLeftOf="@id/imgOvertimeSession"
        app:layout_constraintTop_toTopOf="@id/tvCheckedSessionNumber" />

    <TextView
        android:id="@+id/tvCheckedByHandNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_20"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintTop_toTopOf="@id/imgCheckedByHand"
        app:layout_constraintBottom_toBottomOf="@id/imgCheckedByHand"
        app:layout_constraintLeft_toRightOf="@id/imgCheckedByHand" />

    <ImageView
        android:id="@+id/imgOvertimeSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_overtime"
        app:layout_constraintBottom_toBottomOf="@+id/tvCheckedSessionNumber"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/imgCheckedByHand"
        app:layout_constraintRight_toLeftOf="@id/imgAbsentSession"
        app:layout_constraintTop_toTopOf="@id/tvCheckedSessionNumber" />

    <TextView
        android:id="@+id/tvOvertimeSessionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_20"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintTop_toTopOf="@id/imgOvertimeSession"
        app:layout_constraintBottom_toBottomOf="@id/imgOvertimeSession"
        app:layout_constraintLeft_toRightOf="@id/imgOvertimeSession" />

    <ImageView
        android:id="@+id/imgAbsentSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_absent"
        app:layout_constraintBottom_toBottomOf="@+id/tvCheckedSessionNumber"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/imgOvertimeSession"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCheckedSessionNumber"/>

    <TextView
        android:id="@+id/tvAbsentSessionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_20"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintTop_toTopOf="@id/imgAbsentSession"
        app:layout_constraintBottom_toBottomOf="@id/imgAbsentSession"
        app:layout_constraintLeft_toRightOf="@id/imgAbsentSession" />



</androidx.constraintlayout.widget.ConstraintLayout>