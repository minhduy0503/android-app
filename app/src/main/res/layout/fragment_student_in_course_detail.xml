<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/rootLayout"
    tools:context=".view.fragments.StudentInCourseDetailFragment">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgBack"
        app:layout_constraintLeft_toLeftOf="@+id/imgBack"
        app:layout_constraintRight_toRightOf="@+id/imgBack"
        app:layout_constraintTop_toTopOf="@+id/imgBack" />


    <TextView
        android:id="@+id/tvProfileStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/margin_16"
        android:text="1712378"
        android:textColor="@color/white"
        android:textSize="@dimen/text_28"
        app:layout_constraintLeft_toRightOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <TextView
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text=" - "
        android:textColor="@color/white"
        android:textSize="@dimen/text_28"
        app:layout_constraintTop_toTopOf="@id/tvProfileStudentId"
        app:layout_constraintBottom_toBottomOf="@id/tvProfileStudentId"
        app:layout_constraintLeft_toRightOf="@id/tvProfileStudentId"/>

    <TextView
        android:id="@+id/tvProfileStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Đặng Minh Duy"
        android:textColor="@color/white"
        android:textSize="@dimen/text_28"
        app:layout_constraintTop_toTopOf="@id/spacer"
        app:layout_constraintBottom_toBottomOf="@id/spacer"
        app:layout_constraintLeft_toRightOf="@id/spacer"/>

    <TextView
        android:id="@+id/tvListSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_32"
        android:fontFamily="sans-serif-medium"
        android:text="Danh sách các buổi học"
        android:textColor="@color/text_title_gray"
        android:textSize="@dimen/text_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfileStudentName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSessionOfStudent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvListSession"
        tools:listitem="@layout/item_student_in_session_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>