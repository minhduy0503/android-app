<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_bg"
    tools:context=".view.fragments.CheckInResultFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_bottom_sheet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_popup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCheckInTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="sans-serif-medium"
            android:text="Kết quả điểm danh"
            android:textColor="@color/white"
            android:textSize="@dimen/text_26"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileStudent"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="36dp"
            android:scaleType="centerCrop"
            app:strokeWidth="@dimen/dimen_2"
            app:strokeColor="@color/white"
            app:shapeAppearance="@style/circleImageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCheckInTitle" />

        <TextView
            android:id="@+id/tvCheckInResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:fontFamily="sans-serif-medium"
            android:text="Điểm danh thành công"
            android:textColor="@color/field_green"
            android:textSize="@dimen/text_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileStudent" />

        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="sans-serif-medium"
            android:text="MSSV"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spacer"
            app:layout_constraintTop_toBottomOf="@+id/tvCheckInResult" />

        <TextView
            android:id="@+id/spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text=" - "
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            app:layout_constraintBottom_toBottomOf="@id/tvStudentId"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/tvStudentId"
            app:layout_constraintRight_toLeftOf="@id/tvStudentName"
            app:layout_constraintTop_toTopOf="@id/tvStudentId" />

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Họ tên sinh viên"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            app:layout_constraintBottom_toBottomOf="@id/tvStudentId"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/spacer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvStudentId" />


        <View
            android:id="@+id/btnConfirm"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:background="@drawable/success_shape"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirm"
            app:layout_constraintLeft_toLeftOf="@id/imgTickDone"
            app:layout_constraintRight_toRightOf="@id/tvConfirm"
            app:layout_constraintTop_toTopOf="@id/tvConfirm" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/margin_24"
            android:paddingHorizontal="@dimen/dimen_14"
            android:paddingVertical="@dimen/dimen_16"
            android:text="Đồng ý"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/imgTickDone"
            app:layout_constraintRight_toLeftOf="@id/middleLine"
            app:layout_constraintTop_toBottomOf="@id/tvStudentId" />


        <ImageView
            android:id="@+id/imgTickDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:src="@drawable/ic_tick_done"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirm"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvConfirm"
            app:layout_constraintTop_toTopOf="@+id/tvConfirm" />


        <View
            android:id="@+id/btnReport"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:background="@drawable/error_shape"
            app:layout_constraintBottom_toBottomOf="@id/tvReport"
            app:layout_constraintLeft_toLeftOf="@id/imgReport"
            app:layout_constraintRight_toRightOf="@id/tvReport"
            app:layout_constraintTop_toTopOf="@id/tvReport" />


        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_12"
            android:paddingVertical="@dimen/dimen_16"
            android:text="Khiếu nại"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirm"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/imgReport"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvConfirm" />

        <ImageView
            android:id="@+id/imgReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirm"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/middleLine"
            app:layout_constraintRight_toLeftOf="@id/tvReport"
            app:layout_constraintTop_toTopOf="@+id/tvConfirm" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/grStudentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvStudentId, tvStudentName, spacer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>