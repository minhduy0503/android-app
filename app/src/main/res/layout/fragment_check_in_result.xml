<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dim_bg"
    tools:context=".view.fragments.CheckInResultFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_bottom_sheet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCheckInTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="Check In Confirmation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_28"
            android:textStyle="normal|bold"
            android:layout_marginBottom="@dimen/margin_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_marginRight="@dimen/margin_24"
            app:layout_constraintTop_toTopOf="@+id/tvTitleBottomSheet"
            app:layout_constraintBottom_toBottomOf="@id/tvCheckInTitle"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/btnClose"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            app:layout_constraintTop_toTopOf="@+id/imgClose"
            app:layout_constraintLeft_toLeftOf="@+id/imgClose"
            app:layout_constraintRight_toRightOf="@id/imgClose"
            app:layout_constraintBottom_toBottomOf="@id/imgClose"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileStudent"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/ic_student"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:scaleType="centerCrop"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvCheckInTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student ID"
            android:textSize="@dimen/text_20"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_30"
            app:layout_constraintTop_toBottomOf="@+id/profileStudent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_20"
            app:layout_constraintTop_toBottomOf="@+id/tvStudentId"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/text_28"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_20"
            app:layout_constraintTop_toBottomOf="@+id/tvStudentName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnRetry"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/success_shape"
            android:layout_marginHorizontal="@dimen/margin_30"
            app:layout_constraintTop_toTopOf="@id/tvConfirm"
            app:layout_constraintLeft_toLeftOf="@id/leftLine"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirm"
            app:layout_constraintRight_toRightOf="@id/middleLine"/>

        <ImageView
            android:id="@+id/imgTickDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tick_done"
            android:paddingHorizontal="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/leftLine"
            app:layout_constraintTop_toTopOf="@+id/tvConfirm"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirm"
            app:layout_constraintRight_toLeftOf="@id/tvConfirm"/>


        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:paddingVertical="@dimen/dimen_16"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            android:textSize="@dimen/text_24"
            android:layout_marginTop="@dimen/dimen_30"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/imgTickDone"
            app:layout_constraintTop_toBottomOf="@id/tvTimer"
            app:layout_constraintRight_toRightOf="@id/middleLine"/>


        <View
            android:id="@+id/btnRetry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/warning_shape"
            android:layout_marginHorizontal="@dimen/margin_30"
            app:layout_constraintTop_toTopOf="@id/tvRetry"
            app:layout_constraintLeft_toLeftOf="@id/middleLine"
            app:layout_constraintBottom_toBottomOf="@id/tvRetry"
            app:layout_constraintRight_toRightOf="@id/rightLine"/>

        <ImageView
            android:id="@+id/imgRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reload"
            android:paddingHorizontal="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/tvRetry"
            app:layout_constraintLeft_toLeftOf="@id/middleLine"
            app:layout_constraintBottom_toBottomOf="@id/tvRetry"
            app:layout_constraintRight_toLeftOf="@id/tvRetry"/>


        <TextView
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:paddingVertical="@dimen/dimen_16"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            android:textSize="@dimen/text_24"
            android:layout_marginTop="@dimen/dimen_30"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/imgRetry"
            app:layout_constraintRight_toRightOf="@id/rightLine"
            app:layout_constraintTop_toBottomOf="@id/tvTimer"/>

        <View
            android:id="@+id/btnReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bgr_button_error"
            app:layout_constraintLeft_toLeftOf="@+id/imgReport"
            app:layout_constraintTop_toTopOf="@id/tvReport"
            app:layout_constraintRight_toRightOf="@id/tvReport"
            app:layout_constraintBottom_toBottomOf="@id/tvReport"/>

        <ImageView
            android:id="@+id/imgReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warning"
            android:paddingHorizontal="@dimen/padding_8"
            android:layout_marginVertical="@dimen/margin_32"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/leftLine"
            app:layout_constraintRight_toLeftOf="@id/tvReport"
            app:layout_constraintTop_toBottomOf="@+id/btnRetry"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            android:paddingVertical="@dimen/dimen_16"
            android:textSize="@dimen/text_24"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/imgReport"
            app:layout_constraintRight_toRightOf="@id/rightLine"
            app:layout_constraintTop_toTopOf="@id/imgReport"
            app:layout_constraintBottom_toBottomOf="@id/imgReport"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>