<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.BottomSheetFragment">

    <TextView
        android:id="@+id/tvTitleBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select campus"
        android:textSize="@dimen/text_30"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/topLineSheet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLineSheet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomLineSheet"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topLineSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomLineSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>