<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.fragments.CheckinFragment">

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="@dimen/text_30"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/topLine"
        app:layout_constraintLeft_toLeftOf="@+id/leftLine"
        app:layout_constraintRight_toRightOf="@id/rightLine"/>

    <TextView
        android:id="@+id/tvCampus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Campus"
        android:textSize="@dimen/text_20"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/bgr_edittext"
        android:drawableEnd="@drawable/ic_down_arrow"
        android:padding="@dimen/padding_16"
        app:layout_constraintLeft_toLeftOf="@id/leftLine"
        app:layout_constraintRight_toRightOf="@id/rightLine"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"/>


    <TextView
        android:id="@+id/tvRoomValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Room name"
        android:textSize="@dimen/text_20"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/bgr_edittext"
        android:drawableEnd="@drawable/ic_down_arrow"
        android:layout_marginTop="@dimen/margin_20"
        android:padding="@dimen/padding_16"
        app:layout_constraintLeft_toLeftOf="@id/leftLine"
        app:layout_constraintRight_toRightOf="@id/rightLine"
        app:layout_constraintTop_toBottomOf="@id/tvCampus"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_button_active"
        android:text="Start"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintLeft_toLeftOf="@id/leftLine"
        app:layout_constraintRight_toRightOf="@id/rightLine"
        app:layout_constraintTop_toBottomOf="@+id/tvRoomValue" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />




</androidx.constraintlayout.widget.ConstraintLayout>